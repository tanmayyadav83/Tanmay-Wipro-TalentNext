<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
           https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

  <display-name>CRUD Hibernate App</display-name>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.AddEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddEmployeeServlet</servlet-name>
    <url-pattern>/employee/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteEmployeeServlet</servlet-name>
    <url-pattern>/employee/delete</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ModifyEmployeeServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.ModifyEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyEmployeeServlet</servlet-name>
    <url-pattern>/employee/modify</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FindEmployeeServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.FindEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FindEmployeeServlet</servlet-name>
    <url-pattern>/employee/find</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListEmployeesServlet</servlet-name>
    <servlet-class>com.example.crud.servlets.ListEmployeesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListEmployeesServlet</servlet-name>
    <url-pattern>/employee/list</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
